<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proiect_Final_TerescencoAlexandru</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proiect_Final_TerescencoAlexandru.styles.css" asp-append-version="true" />
</head>
<body class="bg-black">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3" style="padding:0px; height:60px">
            <div class="container-fluid h-100" style="height: 50px">
                <a class="navbar-brand text-white h-100" style="width:30%; background-color: rgba(41,174,78,0.5); align-content:center; font-size:30px" asp-area="" asp-controller="Home" asp-action="Index">GameSpace</a>
                <button class="navbar-toggler bg-white" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item mx-2" style="width:10%; text-align:center; font-size: 20px">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item mx-2" style="width:10%; text-align:center; font-size: 20px">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="News">News</a>
                        </li>
                        <li class="nav-item mx-2" style="width:10%; text-align:center; font-size: 20px">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="About Us">About Us</a>
                        </li>
                    </ul>
                </div>
                <div class="h-100 align-self-center align-content-center" style="width:10%; min-width: 400px; position:relative; right: 50px">
                    <button class="border-0" style="outline:none; background:none; margin-right: 5px">
                        <img style="width:40px; height:40px" src="/Images/Light.svg" alt="Theme" />
                    </button>
                    <input type="text" class="border-1 bg-black text-white h-75" style=" width: 70%; min-width:200px" placeholder="Search" />
                    <button class="border-0" style="outline:none; background:none">
                        <img style="width:40px; height:40px" src="/Images/search.svg" alt="Search_Icon" />
                    </button>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Proiect_Final_TerescencoAlexandru - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
